@model IEnumerable<WebshopAdmin.Models.ProductCategory>

@{
    ViewBag.Title = "Termék kategóriák";
}

<h2>Termék kategóriák</h2>

<p>
    @Html.ActionLink("Új kategória", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Szerkesztés", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Törlés", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
